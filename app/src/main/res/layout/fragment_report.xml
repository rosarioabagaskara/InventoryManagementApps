<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReportFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Pendapatan Hari Ini"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"
            android:textStyle="bold"
            />
        <!-- TODO: Update blank fragment layout -->
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1,2,3,4">


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp">

                <TextView
                    android:id="@+id/orderNumberTextViewRow"
                    android:layout_width="50dp"
                    android:layout_column="1"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:text="Order Number"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/namaProdukTextViewRow"
                    android:layout_width="50dp"
                    android:layout_column="1"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:text="Nama Produk"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/jumlahProdukTextViewRow"
                    android:layout_width="50dp"
                    android:layout_column="1"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:text="Jumlah Produk"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/subtotalTextViewRow"
                    android:layout_width="150dp"
                    android:layout_column="1"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:text="Subtotal"
                    android:textStyle="bold" />
            </TableRow>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/pendapatanRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </TableLayout>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1,2,3">


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp">
                <TextView
                    android:layout_column="1"
                    android:layout_width="50dp"
                    android:padding="10dp"
                    android:text=""
                    />

                <TextView
                    android:layout_gravity="center"
                    android:layout_column="2"
                    android:layout_width="50dp"
                    android:padding="10dp"
                    android:text="Total" />

                <TextView
                    android:id="@+id/hargaTotalTextView"
                    android:layout_gravity="center"
                    android:layout_column="3"
                    android:layout_width="100dp"
                    android:padding="10dp"
                    android:text="Rp. 100.000" />
            </TableRow>
        </TableLayout>

    </LinearLayout>


</FrameLayout>